<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieActivity">

    <ImageView
        android:id="@+id/movie_details_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/movie_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movie_details_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16dp"
        android:text="Spider"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/movie_details_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movie_details_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12dp"
        android:text="2000"
        android:layout_margin="8dp"
        />
    
    <TextView
        android:id="@+id/movie_details_actors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movie_details_year"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12dp"
        android:text="Morgan Freeman, Michael Wincott, Monica Potter"
        android:layout_margin="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plot"
        android:text="PLOT"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/movie_details_actors"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_details_plot"
        app:layout_constraintTop_toBottomOf="@id/plot"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        />


    
</androidx.constraintlayout.widget.ConstraintLayout>