<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movies_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/movies_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movies_list_item_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16dp"
        android:text="Spider"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/movies_list_item_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/movies_list_item_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12dp"
        android:text="2000"
        android:layout_margin="8dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>